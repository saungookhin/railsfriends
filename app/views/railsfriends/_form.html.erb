<%= form_with(model: railsfriend) do |form| %>
  <% if railsfriend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(railsfriend.errors.count, "error") %> prohibited this railsfriend from being saved:</h2>

      <ul>
        <% railsfriend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :first_name %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
